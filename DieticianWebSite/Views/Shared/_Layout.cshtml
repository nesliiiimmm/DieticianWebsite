@{
    DieticianWebSiteContext db = new DieticianWebSiteContext();
    var index = db.Tarifler.ToList();
    var indeex = db.Yazilar.ToList();
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>Dietician Web Site</title>

    <!-- Favicon -->
    <link rel="icon" href="~/img/core-img/favicon.ico">

    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/style.css">

</head>

<body>
    <!-- ##### Header Area Start ##### -->
    <header class="header-area">

        <!-- Top Header Area -->
        <div class="top-header-area bg-img bg-overlay" style="background-image: url(img/bg-img/header.jpg);">
            <div class="container h-100">
                <div class="row h-100 align-items-center justify-content-between">
                    <div class="col-12 col-sm-6">
                        <!-- Top Social Info -->
                        <div class="top-social-info">

                            <a href="https://www.facebook.com/feyza.2606" data-toggle="tooltip" data-placement="bottom" title="Facebook"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                            <a href="https://twitter.com/feyzakilic01" data-toggle="tooltip" data-placement="bottom" title="Twitter"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                            <a href="https://www.linkedin.com/in/neslihan-ak-77019aba/" data-toggle="tooltip" data-placement="bottom" title="Linkedin"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                            <!--instagram eklenecek-->
                        </div>
                    </div>
                    <div class="col-12 col-sm-6 col-lg-5 col-xl-4">
                        <!-- Top Search Area -->
                        <div class="top-search-area">
                            <form action="#" method="post">
                                <input type="search" name="top-search" id="topSearch" placeholder="Arama">
                                <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logo Area -->
        <div class="logo-area">
            <a class="logo" asp-controller="Home" asp-action="Index"><img src="~/img/core-img/logo.png" alt="logo"></a>
        </div>

        <!-- Navbar Area -->
        <div class="bueno-main-menu" id="sticker">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <!-- Menu -->
                    <nav class="classy-navbar justify-content-between" id="buenoNav">

                        <!-- Toggler -->
                        <div id="toggler"><img src="~/img/core-img/toggler.png" alt=""></div>

                        <!-- Navbar Toggler -->
                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler"><span></span><span></span><span></span></span>
                        </div>

                        <!-- Menu -->
                        <div class="classy-menu">

                            <!-- Close Button -->
                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>

                            <!-- Nav Start -->
                            <div class="classynav">
                                <ul>
                                    <li><a class="btn btn-default" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>

                                    <li><a class="btn btn-default" asp-controller="Home" asp-action="Hakkimda">Hakkımda</a></li>
                                    @*<li><a class="btn btn-default" asp-controller="Home" asp-action="Hakkimda">Online Diyet</a></li>*@
                                    <li><a asp-action="Index" asp-controller="Yazilars">Öneriler</a></li>
                                    <li><a asp-action="Index" asp-controller="Tarifler">Yemek Tarifleri</a></li>
                                    <li>
                                        <a href="~/#">DigerSeyler</a>
                                        <ul class="dropdown">
                                            @*<li><a href="~/Views/Home/index.cshtml">Soru-Cevap</a></li>
                                                <li><a href="~/Views/Home/index.cshtml">Catagory</a></li>
                                                 <li><a href="~/Views/Home/index.cshtml">Catagory Post</a></li>
                                                 <li><a href="~/Views/Home/index.cshtml">Single Post</a></li>*@
                                            <li><a asp-action="Create" asp-controller="Yazilars">Yazı Ekle</a></li>
                                            <li><a asp-action="AddTarif" asp-controller="Tarifler">Tarif ekle</a></li>
                                        </ul>
                                    </li>
                                </ul>

                                <!-- Login/Register -->
                                <div class="login-area">
                                    <a asp-action="Index" asp-controller="SignUp">Giriş / Üye Ol</a></li>
                                </div>
                            </div>
                            <!-- Nav End -->

                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ##### Header Area End ##### -->
    <!-- ##### Treading Post Area Start ##### -->
    <div class="treading-post-area" id="treadingPost">
        <div class="close-icon">
            <i class="fa fa-times"></i>
        </div>

        <h4>Son Gönderiler</h4>
        @foreach (var item in index)
        {


            <!-- Single Blog Post -->
            <div class="single-blog-post style-1 d-flex flex-wrap mb-30">
                <!-- Blog Thumbnail -->
                <div class="blog-thumbnail">
                    <img src="~/img/bg-img/9.jpg" alt="">
                </div>
                <!-- Blog Content -->
                <div class="blog-content">
                    <a href="~/#" class="post-tag"></a>
                    <a href="~/#" class="post-title">@item.Adi</a>
                    <div class="post-meta">
                        <a href="~/#" class="post-date">@item.Tarih</a>
                        <a href="~/#" class="post-author"></a>
                    </div>
                </div>
            </div>
        }
        @foreach (var item in indeex)
        {
            <!-- Single Blog Post -->
            <div class="single-blog-post style-1 d-flex flex-wrap mb-30">
                <!-- Blog Thumbnail -->
                <div class="blog-thumbnail">
                    <img src="~/img/bg-img/10.jpg" alt="">
                </div>
                <!-- Blog Content -->
                <div class="blog-content">
                    <a href="~/#" class="post-tag"></a>
                    <a href="~/#" class="post-title">@item.Adi</a>
                    <div class="post-meta">
                        <a href="~/#" class="post-date">@item.Tarih</a>
                        <a href="~/#" class="post-author"></a>
                    </div>
                </div>
            </div>

        }


    </div>

    <!-- ##### Treading Post Area End ##### -->


    @RenderBody();



    <!-- ##### Footer Area Start ##### -->
    <footer class="footer-area">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-5">
                    <!-- Copywrite Text -->
                    @*<p class="copywrite-text">
                            <a href="#"></a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>*@
                </div>
                <div class="col-12 col-sm-7">
                    <!-- Footer Nav -->
                    <div class="footer-nav">
                        <ul>
                            <li><a class="btn btn-default" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                            <li><a class="btn btn-default" asp-controller="Home" asp-action="Hakkimda">Hakkımda</a></li>
                            <li><a class="btn btn-default" asp-controller="Yazilars" asp-action="Index">Öneriler</a></li>
                            <li><a class="btn btn-default" asp-action="Index" asp-controller="Tanifler">Yemek Tarifleri</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ##### Footer Area Start ##### -->
    <!-- ##### All Javascript Script ##### -->
    <!-- jQuery-2.2.4 js -->
    <script src="~/js/jquery/jquery-2.2.4.min.js"></script>

    <!-- Popper js -->
    <script src="~/js/bootstrap/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/js/bootstrap/bootstrap.min.js"></script>
    <!-- All Plugins js -->
    <script src="~/js/plugins/plugins.js"></script>
    <!-- Active js -->
    <script src="~/js/active.js"></script>
</body>

</html>