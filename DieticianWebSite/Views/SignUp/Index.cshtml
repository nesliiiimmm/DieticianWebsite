@model DieticianWebSite.Models.UyeGiris

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<hr />

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<section class="login-block">
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
                <h2 class="text-center">Giriş yap</h2>
                <form class="login-form" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="text-uppercase">Kullanıcı Adı</label>
                        <input type="text" name="email" class="form-control" placeholder="Kullanici">

                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1" class="text-uppercase">Sifre</label>
                        <input type="password" name="password" class="form-control" placeholder="Sifre" required>
                    </div>


                    <div class="form-check">
                        <p style="color:darkred">@ViewBag.ErrorMessage</p>
                        <a class="post-title" asp-controller="SignIn" asp-action="Index">Uye Ol</a>
                        <button type="submit" class="btn btn-login float-right">Giriş</button>
                    </div>

                </form>
            </div>
            <div class="col-md-8 banner-sec">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="~/img/diyetresim.jpg" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text">
                                    <h2 style="color:#000000;">Kendinize Uygun Diyet..</h2>
                                    <p style="color:#010101">
                                        Bildiğiniz gibi hepimizin sindirim sistemi farklı.. bunun için sağlıklı herşeyi yiyerek (kısıtlama yok) zayıflamaya ne dersiniz..
                                        Bunun için Üyelik girişi yapmanız gereklidir.
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img class="d-block img-fluid" src="~/img/soru-cevap.jpg" alt="First slide">
                            <div class="carousel-caption d-none d-md-block">
                                <div class="banner-text">
                                    <h2 style="color:#000000;">Soru-Cevap</h2>
                                    <p style="color:#010101;">Merak ettiğiniz herşeyi soru-cevap kısmından sorabilisiniz.. bunun için üye girişi gereklidir.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>